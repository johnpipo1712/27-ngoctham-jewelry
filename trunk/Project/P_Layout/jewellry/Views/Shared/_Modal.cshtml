<!-- modal Login -->
<div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <!-- modal header -->
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Đăng Nhập</h4>
            </div><!-- /modal header -->


            <form class="form-horizontal" role="form">
                <!-- modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Tên đăng nhập</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="inputEmail3" placeholder="Tên đăng nhập">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Mật khẩu</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputPassword3" placeholder="Mật khẩu">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Ghi nhớ
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /modal body -->

                <div class="modal-footer">
                    <!-- modal footer -->
                    <button class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div><!-- /modal footer -->
            </form>

        </div>
    </div>
</div>


<!-- modal Register -->
<div class="modal fade" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <!-- modal header -->
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Đăng kí</h4>
            </div><!-- /modal header -->


            <form action="#" method="post" class="sky-form">

                <div class="modal-body">
                    <fieldset>
                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="text" placeholder="Tên đăng nhập">
                                <b class="tooltip tooltip-bottom-right">Chỉ chấp nhận chữ không dấu và số</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="text" placeholder="Email">
                                <b class="tooltip tooltip-bottom-right">Chúng tôi sẽ gửi email xác nhận qua địa chỉ này</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" placeholder="Mật khẩu">
                                <b class="tooltip tooltip-bottom-right">Chỉ chấp nhận chữ không dấu và số</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" placeholder="Nhập lại mật khẩu">
                                <b class="tooltip tooltip-bottom-right">Chỉ chấp nhận chữ không dấu và số</b>
                            </label>
                        </section>
                    </fieldset>

                    <fieldset>
                        <div class="row">
                            <section class="col col-md-6">
                                <label class="input">
                                    <input type="text" placeholder="Họ">
                                </label>
                            </section>
                            <section class="col col-md-6">
                                <label class="input">
                                    <input type="text" placeholder="Tên">
                                </label>
                            </section>
                        </div>

                        <section>
                            <label class="select">
                                <select>
                                    <option value="0" selected="" disabled="">Giới tính</option>
                                    <option value="1">Nam</option>
                                    <option value="2">Nữ</option>
                                    <option value="3">Khác</option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                        <section>
                            <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Tôi đồng ý với các điều khoản dịch vụ</label>
                            <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Tôi muốn nhận email thông báo từ website</label>
                        </section>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <!-- modal footer -->
                    <button class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                </div><!-- /modal footer -->
            </form>

        </div>
    </div>
</div>

