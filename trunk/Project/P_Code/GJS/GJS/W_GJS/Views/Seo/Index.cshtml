@model IEnumerable<W_GJS.Models.O_SEO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Bảng điều khiển</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-dashboard page-header-icon"></i>&nbsp;&nbsp;Bảng điều khiển</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <div class="pull-right col-xs-12 col-sm-auto"><a style="width: 100%;" class="btn btn-primary btn-labeled" href="@Url.Action("Create", "Seo")"><span class="btn-label icon fa fa-plus"></span>Tạo mới</a></div>
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}

<h2>Danh sách</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HREF_ICON)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TITILE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.META_DES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.META_KEYWORDS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.META_ROBOTS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.META_REVISIT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HREF_ICON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TITILE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.META_DES)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.META_KEYWORDS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.META_ROBOTS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.META_REVISIT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STATUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATEDATE)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Kích hoạt", "Active", new { CD = item.CD })
            }
            else
            {
                @Html.ActionLink("Xóa", "Deactive", new { CD = item.CD })
            }
        </td>
    </tr>
}

</table>
