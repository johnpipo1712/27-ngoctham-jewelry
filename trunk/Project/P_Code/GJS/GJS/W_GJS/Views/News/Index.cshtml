@model IEnumerable<W_GJS.Models.O_NEWS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NEWS_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NEWS_TITLE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NEWS_CONTENT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMAGE_NEWS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_NEWS_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TAG_ALT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NEWS_CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NEWS_TITLE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NEWS_CONTENT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IMAGE_NEWS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY_NEWS_CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAG_ALT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STATUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATEDATE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Active", "Active", new { NEWS_CD = item.NEWS_CD })
            }
            else
            {
                @Html.ActionLink("Deactive", "Deactive", new { NEWS_CD = item.NEWS_CD })
            }
        </td>
    </tr>
}

</table>
