@model W_GJS.Models.O_CATEGORY_PRODUCT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Danh mục sản phẩm</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-suitcase page-header-icon"></i>&nbsp;&nbsp;Danh mục sản phẩm</h1>
        </div>
    </div>
}
<h2>Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>O_CATEGORY_PRODUCT</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.CATEGORY_PRODUCT_CODE, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CATEGORY_PRODUCT_CODE)
                @Html.ValidationMessageFor(model => model.CATEGORY_PRODUCT_CODE)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CATEGORY_PRODUCT_NAME, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CATEGORY_PRODUCT_NAME)
                @Html.ValidationMessageFor(model => model.CATEGORY_PRODUCT_NAME)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
