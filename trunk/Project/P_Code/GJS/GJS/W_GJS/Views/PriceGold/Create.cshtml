@model W_GJS.Models.O_PRICE_GOLD

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Bảng giá vàng</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-money page-header-icon"></i>&nbsp;&nbsp;Bảng giá vàng</h1>
        </div>
    </div>
}

<h2>Thêm</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PRICE_SALES, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRICE_SALES)
                @Html.ValidationMessageFor(model => model.PRICE_SALES)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRICE_BUY, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRICE_BUY)
                @Html.ValidationMessageFor(model => model.PRICE_BUY)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GOLD_CODE, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GOLD_CODE)
                @Html.ValidationMessageFor(model => model.GOLD_CODE)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GOLD_NAME, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GOLD_NAME)
                @Html.ValidationMessageFor(model => model.GOLD_NAME)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
