@model IEnumerable<W_GJS.Models.O_CATEGORY_NEWS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2 class="page-head">Danh sách</h2>

<p>
    <a href="@Url.Action("Create", "CategoryNews")" class="btn btn-primary">Tạo Mới</a>
    @*@Html.ActionLink("Tạo mới", "Create")*@
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_NEWS_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_NEWS_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_NEWS_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TAG_ALT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_NEWS_CD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_NEWS_CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_NEWS_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TAG_ALT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STATUS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACTIVE, new { @class = "form-control" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREATEDATE)
            </td>
            <td>
                <a class="control-icon" href="@Url.Action("Edit", "CategoryNews", new { CATEGORY_NEWS_CD = item.CATEGORY_NEWS_CD })">
                    <img src="@Url.Content("~/Content/images/icons/pencil.png")" alt="Edit" />
                </a>
                @if (item.ACTIVE == false)
                {
                    <a class="control-icon" href="@Url.Action("Active", "CategoryNews", new { CATEGORY_NEWS_CD = item.CATEGORY_NEWS_CD })">
                        <img src="@Url.Content("~/Content/images/icons/activate.png")" alt="Edit" />
                    </a>
                    @*@Html.ActionLink("Active", "Active", new { CATEGORY_NEWS_CD = item.CATEGORY_NEWS_CD })*@
                }
                else
                {
                    @*@Html.ActionLink("Deactive", "Deactive", new { CATEGORY_NEWS_CD = item.CATEGORY_NEWS_CD })*@

                    <a class="control-icon" href="@Url.Action("Deactive", "CategoryNews", new { CATEGORY_NEWS_CD = item.CATEGORY_NEWS_CD })">
                        <img src="@Url.Content("~/Content/images/icons/cancel.png")" alt="Edit" />
                    </a>
                }
            </td>
        </tr>
    }

</table>
