@model IEnumerable<W_GJS.Models.M_PAGE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <ul class="breadcrumb breadcrumb-page">
        <li class="breadcrumb-label text-light-gray">Bạn đang ở đây: </li>
        <li><a href="#">Trang chủ</a></li>
        <li class="active"><a href="#">Trang tĩnh</a></li>
    </ul>

    <div class="page-header">

        <div class="row">
            <!-- Page header, center on small screens -->
            <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-home page-header-icon"></i>&nbsp;&nbsp;Trang tĩnh</h1>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <hr class="visible-xs no-grid-gutter-h">
                    <div class="pull-right col-xs-12 col-sm-auto"><a style="width: 100%;" class="btn btn-primary btn-labeled" href="@Url.Action("Create", "Page")"><span class="btn-label icon fa fa-plus"></span>Tạo mới</a></div>
                    <!-- Margin -->
                    <div class="visible-xs clearfix form-group-margin"></div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/ckeditor/ckeditor.js" type="text/javascript"></script>

<h2>Danh sách</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PAGE_COTRACT_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PAGE_COTRACT_TITLE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.O_CATEGORY_PAGE)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PAGE_COTRACT_CD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAGE_COTRACT_TITLE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O_CATEGORY_PAGE.CATEGORY_PAGE_NAME)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { PAGE_COTRACT_CD = item.PAGE_COTRACT_CD }) |
                @if (item.ACTIVE == false)
                    {
                        @Html.ActionLink("Kích hoạt", "Active", new { PAGE_COTRACT_CD = item.PAGE_COTRACT_CD })
                    }
                    else
                    {
                        @Html.ActionLink("Xóa", "Deactive", new { PAGE_COTRACT_CD = item.PAGE_COTRACT_CD })
                    }
            </td>
        </tr>
    }

</table>
