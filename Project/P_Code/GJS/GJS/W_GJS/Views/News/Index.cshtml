@model IEnumerable<W_GJS.Models.O_NEWS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NEWS_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NEWS_TITLE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_NEWS_CD)
        </th>
        <th>Sản phẩm nổi bật</th>
        <th>Sản phẩm mới</th>
        <th>
            @Html.DisplayNameFor(model => model.TAG_ALT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NEWS_CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NEWS_TITLE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.O_CATEGORY_NEWS.CATEGORY_NEWS_NAME)
        </td>
        <td>
            @if (item.O_NEWS_HIGHLIGHTS.Count == 0 || item.O_NEWS_HIGHLIGHTS == null)
            {
                <input type="checkbox" onclick="CheckSelling(@item.NEWS_CD,this)" name="checkboxselling" />
            }
            else
            {
                <input type="checkbox" checked="checked" onclick="CheckSelling(@item.NEWS_CD,this)" name="checkboxselling" />

            }
        </td>
        <td>
            @if (item.O_NEWS_NEW.Count == 0 || item.O_NEWS_NEW == null)
            {
                <input type="checkbox" onclick="CheckSelling(@item.NEWS_CD,this)" name="checkboxselling" />
            }
            else
            {
                <input type="checkbox" checked="checked" onclick="CheckSelling(@item.NEWS_CD,this)" name="checkboxselling" />

            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAG_ALT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATEDATE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { NEWS_CD = item.NEWS_CD }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Active", "Active", new { NEWS_CD = item.NEWS_CD })
            }
            else
            {
                @Html.ActionLink("Deactive", "Deactive", new { NEWS_CD = item.NEWS_CD })
            }
        </td>
    </tr>
}

</table>
