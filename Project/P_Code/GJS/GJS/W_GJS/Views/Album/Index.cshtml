@model IEnumerable<W_GJS.Models.O_ALBUM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.URL_IMAGE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_ALBUM_CD)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.URL_IMAGE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.O_CATEGORY_ALBUM.CATEGORY_ALBUM_NAME)
        </td>
       
        <td>
            @Html.ActionLink("Sửa", "Edit", new { ALBUM_CD = item.ALBUM_CD }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Kích hoạt", "Active", new { ALBUM_CD = item.ALBUM_CD })
            }
            else
            {
                @Html.ActionLink("Xóa", "Deactive", new { ALBUM_CD = item.ALBUM_CD })
            }
        </td>
    </tr>
}

</table>
