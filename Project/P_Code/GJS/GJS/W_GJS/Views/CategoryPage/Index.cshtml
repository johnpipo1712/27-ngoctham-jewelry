@model IEnumerable<W_GJS.Models.O_CATEGORY_PAGE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PAGE_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PAGE_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PAGE_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TAG_ALT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_PAGE_CD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_PAGE_CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_PAGE_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TAG_ALT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STATUS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACTIVE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREATEDATE)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { CATEGORY_PAGE_CD = item.CATEGORY_PAGE_CD }) |
                @if (item.ACTIVE == false)
                {
                    @Html.ActionLink("Active", "Active", new { CATEGORY_PAGE_CD = item.CATEGORY_PAGE_CD })
                }
                else
                {
                    @Html.ActionLink("Deactive", "Deactive", new { CATEGORY_PAGE_CD = item.CATEGORY_PAGE_CD })
                }
            </td>
        </tr>
    }

</table>
