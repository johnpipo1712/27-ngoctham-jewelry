@{
    ViewBag.Title = "Trang chủ";
    W_GJS.Models.GJSEntities gjs = new W_GJS.Models.GJSEntities();
    List<W_GJS.Models.O_PRODUCT_NEW> listproduct_new = gjs.O_PRODUCT_NEW.Where(t=>t.O_PRODUCT.ACTIVE == true && t.STATUS == 1).ToList();
    List<W_GJS.Models.O_PRODUCT_HIGHLIGHTS> listproduct_hightlights = gjs.O_PRODUCT_HIGHLIGHTS.Where(t => t.O_PRODUCT.ACTIVE == true && t.O_PRODUCT.STATUS == 1).ToList();
    List<W_GJS.Models.O_PRODUCT_SELLING> listproduct_selling = gjs.O_PRODUCT_SELLING.Where(t => t.O_PRODUCT.ACTIVE == true && t.O_PRODUCT.STATUS == 1).ToList();
    List<W_GJS.Models.O_CATEGORY_PRODUCT> listcategory = gjs.O_CATEGORY_PRODUCT.Where(t => t.ACTIVE == true).ToList();
}

@section Slide {
    @Html.Partial("_Slide")
}

@section Scripts {
    <script>
        function showPopup() {
            var needPopup = @(Session["needPopup"] == null ? "true" : "false");
            @{
                Session["needPopup"] = true;
            }
            if (needPopup) {
                $("#PopupModal").modal();
            }
        }
        showPopup();

        function loadProducts() {
            inProgress = true;
            $("#loadingDiv").show();
            
            $.post("@Url.Action("GetNext9Products", "Home")", { "blockNumber": blockNumber },
                    function (data) {
                        NoMoreData = data.NoMoreData;
                        if (NoMoreData) {
                            $("#moreProducts").hide();
                        }
                        $("#ProductList").append(data.HTMLString);
                        $("#loadingDiv").hide();
                        blockNumber++;
                        inProgress = false;

                    });
        }

        var NoMoreData = false;
        var blockNumber = 0;
        loadProducts();
        
        $( "#moreProducts" ).click(function() {
            if (!NoMoreData && !inProgress) {
                loadProducts();
            }
        });
    </script>

}

@section PageTitle {
    <section class="page-title">
            <div class="container">

                <header>

                    <ul class="breadcrumb">
                        <!-- breadcrumb -->
                        <li><a href="@Url.Action("Index")">Trang Chủ</a></li>
                    </ul><!-- /breadcrumb -->

                    <h2>
                        <!-- Page Title -->
                        <strong>Trang Chủ</strong>
                    </h2><!-- /Page Title -->

                </header>

            </div>
        </section>
}

<!-- FEATURED PRODUCTS -->
<h2 class="owl-featured"><strong>Sản Phẩm</strong> Nổi Bật</h2>
<div class="owl-carousel featured" data-plugin-options='{"singleItem": false, "stopOnHover":false, "autoPlay":true, "autoHeight": false, "navigation": true, "pagination": false}'>
    @foreach (var item in listproduct_hightlights)
    {
        <div>
            <div class="owl-featured-item">
                <a class="figure" href="@Url.Action("ProductDetail", new { PRODUCT_CD = item.PRODUCT_CD })">
                    <span><i class="fa fa-plus"></i></span>
                    <img class="" alt="" src="@item.O_PRODUCT.URL_IMAGE" width="230" />
                </a>
                <div class="owl-featured-detail">
                    <a class="featured-title" href="@Url.Action("ProductDetail", new { PRODUCT_CD = item.PRODUCT_CD })">@item.O_PRODUCT.PRODUCT_NAME</a>
                    <span class="price"><span class="line-through styleColor">@String.Format("{0:0,0 " + item.O_PRODUCT.CURRENCY + "}", item.O_PRODUCT.PRICE)</span> <strong>@String.Format("{0:0,0 " + item.O_PRODUCT.CURRENCY + "}", item.O_PRODUCT.PRICE_PROMOTION)</strong></span>
                    <a href="@Url.Action("AddCart", new { PRODUCT_CD = item.PRODUCT_CD, QUANTITY = "1",SIZE = "5" })" class="btn btn-primary btn-sm"><i class="fa fa-shopping-cart"></i> THÊM VÀO GIỎ HÀNG</a>
                </div>
                @if (item.O_PRODUCT.O_PRODUCT_NEW != null && item.O_PRODUCT.O_PRODUCT_NEW.ToList().Count > 0)
                { 
                <div class="sb-gdv-disc">
                    <div class="sb-gdv-disc__content">Mới</div>
                </div>
                }
            </div>
        </div>

    }
</div>
<!-- /FEATURED PRODUCTS -->

