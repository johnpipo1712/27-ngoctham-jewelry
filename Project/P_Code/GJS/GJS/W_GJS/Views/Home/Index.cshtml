<body class="smoothscroll">
    <!-- Default Modal For All Pages -->
    @Html.Partial("_Modal")

    <div id="wrapper">
        @*@ViewContext.Controller.ValueProvider.GetValue("controller").RawValue -
            @ViewContext.Controller.ValueProvider.GetValue("action").RawValue*@
        @Html.Partial("_TopBar")
        @*@RenderSection("Slide", false)*@

        @Html.Partial("_Slide")

        <div id="header">


            @Html.Partial("_Menu")

        </div>

        <!-- CONTENT -->


        <div class="container">
            <div id="slideWel">
                <div id="welcome">
                   @foreach (var item in listIntrodution)
                   {
                        <div class="welBox">
                        <div class="left">
                            <p>@Html.Raw(item.O_HOME_INTRODUCTION_CONTENT)</p>
                            <h1>Người thực hiện  <a href="#" target="_blank">@item.O_HOME_INTRODUCTION_AUTHOR</a></h1>
                        </div><!--end left-->
                        <div class="right">
                            <li style='background-image:url("@item.O_HOME_INTRODUCTION_PHOTO");'></li>
                            <label></label>
                        </div><!--end right-->
                    </div><!--end welBox-->
                   }
                   

                </div><!--end welcome-->
                <div class="pagiWel"></div>
                <span id="angleWel">angleWel</span>
                <div class="clr"></div>
                <script type="text/javascript">
                    jQuery(document).ready(function () {
                        var $welcome = $('#welcome');
                        $welcome.imagesLoaded(function () {
                            $("#welcome").carouFredSel({
                                circular: false,
                                infinite: true,
                                responsive: true,
                                pagination: '.pagiWel',
                                auto: { pauseDuration: 5000, pauseOnHover: true, duration: 1000 },
                                scroll: { fx: "crossfade", items: "page", },
                                prev: false,
                                next: false,
                                swipe: { onMouse: true, onTouch: true },
                                items: {
                                    height: "variable",
                                    visible: { min: 1, max: 1 }
                                }
                            });
                        });
                    });
                </script>
            </div><!--end slideWel-->
            <div id="homeAlbumMain">
                <div id="albumDesc">
                    <div class="navBox" id="homeAlbumNav"><a href="#" class="prev">Quay về</a><a href="#" class="next">Tiếp theo</a></div>
                    <ul>
                        <h1><a href="#">Giới thiệu.</a></h1>
                        <p>@Html.Raw(content.PAGE_COTRACT_CONTENT)</p>
                      
                    </ul>
                    
                </div><!--end albumDesc-->
                <div id="homeAlbum">
                    <div class="homeAlbum">
                    @foreach (var item in listGroup)
                    {
                        <ul>
                      
                            <li style='background-image:url("@item.PHOTO_URL_1");' class='first'>
                                <ul>
                                    <img src='@item.PHOTO_URL_1'  />
                                </ul>
                            </li>
                            <li style='background-image: url("@item.PHOTO_URL_2");'>
                                <ul>
                                    <img src='@item.PHOTO_URL_2'  />
                                </ul>
                            </li>
                            <li style='background-image: url("@item.PHOTO_URL_3");'>
                                <ul>
                                    <img src='@item.PHOTO_URL_3'  />
                                </ul>
                            </li>
                            <li style='background-image: url("@item.PHOTO_URL_4");'>
                                <ul>
                                    <img src='@item.PHOTO_URL_4' />
                                </ul>
                            </li>
                            <li style='background-image: url("@item.PHOTO_URL_5");'>
                                <ul>
                                    <img src='@item.PHOTO_URL_5' />
                                </ul>
                            </li>
                            <li style='background-image: url("@item.PHOTO_URL_6");'>
                                <ul>
                                    <img src='@item.PHOTO_URL_6' />
                                </ul>
                            </li>
                        </ul>
                    }
                        
                    </div><!--end .homeAlbum-->
                    <div class="clr"></div>
                    <script type="text/javascript">
                        jQuery(document).ready(function () {
                            var $homeAlbum = $('.homeAlbum');
                            $homeAlbum.imagesLoaded(function () {
                                $(".homeAlbum").carouFredSel({
                                    circular: true,
                                    infinite: true,
                                    responsive: true,
                                    auto: { pauseDuration: 6000, pauseOnHover: true, duration: 1000 },
                                    scroll: { fx: "crossfade", items: "page", duration: 1000 },
                                    prev: "#homeAlbumNav .prev",
                                    next: "#homeAlbumNav .next",
                                    swipe: { onMouse: true, onTouch: true },
                                    items: {
                                        height: "variable",
                                        visible: { min: 1, max: 1 }
                                    }
                                });
                            });
                        });
                    </script>
                </div><!--end homeAlbum-->
                <div class="clr"></div>
            </div><!--end homeAlbumMain-->
        </div><!--end content-->

        <!-- /CONTENT -->
        @Html.Partial("_Footer")

        <a href="shop-home-1.html#" id="toTop"></a>

    </div><!-- /#wrapper -->


    <a href="#" class="booking" data-toggle="modal" data-target="#BookingModal">
        <img src="@Url.Content("~/Content/images/booking1.png")" alt="Booking" />
    </a>

    <div class="dathang_theoyeucau">

        <div class="content_dathang">
            @Html.Raw(popup.PAGE_COTRACT_CONTENT)

        </div>
