    List<W_GJS.Models.O_HOME_GROUP_PHOTO> listGroup = gjs.O_HOME_GROUP_PHOTO.Where(t => t.ACTIVE == true).ToList();
    List<W_GJS.Models.O_HOME_INTRODUCTION> listIntrodution = gjs.O_HOME_INTRODUCTION.Where(t => t.ACTIVE == true).ToList();

