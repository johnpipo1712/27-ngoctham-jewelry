@{
    ViewBag.Title = "Catalog";
    W_GJS.Models.GJSEntities gjs = new W_GJS.Models.GJSEntities();
    List<W_GJS.Models.O_CATEGORY_PRODUCT> listcategory = gjs.O_CATEGORY_PRODUCT.Where(t => t.ACTIVE == true).ToList();
}

@*section Slide {
        @Html.Partial("_Slide")
    }*@

@section PageTitle {
    <section class="page-title">
        <div class="container">

            <header>

                <ul class="breadcrumb">
                    <!-- breadcrumb -->
                    <li><a href="@Url.Action("Index")">Trang Chủ</a></li>
                    <li class="active">Catolog</li>
                </ul><!-- /breadcrumb -->

                <h2>
                    <!-- Page Title -->
                    <strong>Catolog</strong>
                </h2><!-- /Page Title -->

            </header>

        </div>
    </section>
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Self/catalog/js/script.js")"></script>
}

@foreach (var item in listcategory)
{
    <h2 class="owl-featured margin-bottom-30 margin-top20"><strong>@item.CATEGORY_PRODUCT_NAME</strong></h2>
    if (item.O_PRODUCT.Count == 0)
    {
        <p>Không tìm thấy sản phẩm nào.</p>
    }
    else
    {
        <div id="ProductList-@item.CATEGORY_PRODUCT_CD"></div>
    
    
<script>
    var identified = "@item.CATEGORY_PRODUCT_CD";
    function loadProducts(currentPage) {
        inProgress = true;
        $("#loadingDiv-" + identified).show();

        $.post("@Url.Action("CategoryProductListPaging", "Home")", { "CATEGORY_PRODUCT_CD": @item.CATEGORY_PRODUCT_CD, "numberOfItemsInPage": 10, "currentPage": currentPage },
    function (data) {
        $("#ProductList-" + identified).append(data);
        $("#loadingDiv-" + identified).hide();
        inProgress = false;
    });
    }

    //$(document).ready(function () {
        loadProducts(1);
    //});

            
</script>

    
    }
}



