@model IEnumerable<W_GJS.Models.O_CATEGORY_PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PRODUCT_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PRODUCT_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PRODUCT_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TAG_ALT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY_PRODUCT_CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY_PRODUCT_CODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY_PRODUCT_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAG_ALT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STATUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATEDATE)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { CATEGORY_PRODUCT_CD = item.CATEGORY_PRODUCT_CD }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Kích hoạt", "Active", new { CATEGORY_PRODUCT_CD = item.CATEGORY_PRODUCT_CD })
            }
            else
            {
                @Html.ActionLink("Xóa", "Deactive", new { CATEGORY_PRODUCT_CD = item.CATEGORY_PRODUCT_CD })
            }
        </td>
    </tr>
}

</table>
