@model W_GJS.Models.D_CITIES_DETAIL

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2>Thêm</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tạo</h4>
        <hr />
        @Html.ValidationSummary(true)

      
        <div class="form-group">
            @Html.LabelFor(model => model.CITIES_DETAIL_CODE, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CITIES_DETAIL_CODE)
                @Html.ValidationMessageFor(model => model.CITIES_DETAIL_CODE)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CITIES_DETAIL_NAME, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CITIES_DETAIL_NAME)
                @Html.ValidationMessageFor(model => model.CITIES_DETAIL_NAME)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CITIES_CD, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CITIES_CD", (SelectList)ViewBag.Cities)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
