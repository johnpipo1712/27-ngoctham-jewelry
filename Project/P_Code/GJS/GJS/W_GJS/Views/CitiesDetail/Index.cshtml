@model IEnumerable<W_GJS.Models.D_CITIES_DETAIL>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CITIES_DETAIL_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CITIES_DETAIL_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CITIES_CD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CITIES_DETAIL_CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CITIES_DETAIL_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CITIES_CD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { CITIES_DETAIL_CD = item.CITIES_DETAIL_CD }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Active", "Active", new { CITIES_DETAIL_CD = item.CITIES_DETAIL_CD })
            }
            else
            {
                @Html.ActionLink("Deactive", "Deactive", new { CITIES_DETAIL_CD = item.CITIES_DETAIL_CD })
            }


        </td>
    </tr>
}

</table>
