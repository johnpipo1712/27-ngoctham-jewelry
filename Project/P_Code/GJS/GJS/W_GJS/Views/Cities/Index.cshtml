@model IEnumerable<W_GJS.Models.O_CITIES>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CITIES_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CITIES_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATEDATE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.CITIES_CODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CITIES_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STATUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATEDATE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { CITIES_CD = item.CITIES_CD }) |
            @if (item.ACTIVE == false)
            {
                @Html.ActionLink("Active", "Active", new { CITIES_CD = item.CITIES_CD })
            }
            else
            {
                @Html.ActionLink("Deactive", "Deactive", new { CITIES_CD = item.CITIES_CD })
            }
        </td>
    </tr>
}

</table>
