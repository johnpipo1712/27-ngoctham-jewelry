<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pda_pss"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
          <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:clearTaskOnLaunch="true" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:windowSoftInputMode="stateAlwaysHidden" >
          
        </activity>
        <activity
            android:name=".Layout_dialog"
            android:label="@string/title_activity_layout_dialog"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:clearTaskOnLaunch="true" >
        </activity>
        <activity
            android:name=".Layout_dialog_table"
            android:label="@string/title_activity_layout_dialog_table"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:clearTaskOnLaunch="true"
              >
        </activity>
      
    </application>

    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle" >
        <gradient
            android:angle="90"
            android:endColor="#000"
            android:startColor="#0f0"
            android:type="linear" />
    </shape>

</manifest>
